<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	   xmlns:context="http://www.springframework.org/schema/context"
	   xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
       http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.1.xsd">
	
	<context:property-placeholder/>

	<bean id="jesqueConfigFactory" class="net.lariverosc.jesquespring.JesqueConfigFactory">
		<property name="uri" value="${REDISTOGO_URL:localhost}" />
	</bean>  

	<bean id="jesqueConfig" factory-bean="jesqueConfigFactory" factory-method="create"/>

	<bean id="jesqueClient" class="net.lariverosc.jesquespring.JesqueClient">
		<constructor-arg name="config"  ref="jesqueConfig"/>
	</bean>

	<bean id="jesqueExecutorService" class="net.lariverosc.jesquespring.JesqueExecutorService" init-method="start" destroy-method="stop">
		<constructor-arg name="config"  ref="jesqueConfig"/>
		<property name="coresToUse" value="1" />
		<property name="workersPerCore" value="1" />
	</bean>

</beans>